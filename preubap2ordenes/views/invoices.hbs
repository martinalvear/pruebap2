<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Facturas</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Lista de Facturas</h2>
        {{#each facturas}}
        <div class="card mb-4">
            <div class="card-header">
                Factura ID: {{this.factura_id}} | Orden ID: {{this.orden_id}}
            </div>
            <div class="card-body">
                <h5 class="card-title">Cliente: {{this.cliente_nombre}}</h5>
                <p class="card-text">
                    <strong>Email:</strong> {{this.cliente_email}}<br>
                    <strong>Direcci√≥n:</strong> {{this.cliente_direccion}}<br>
                    <strong>Fecha:</strong> {{this.fecha}}<br>
                    <strong>Total:</strong> ${{this.total}}<br>
                </p>
                <h5 class="card-title">Productos</h5>
                <ul class="list-group">
                    {{#each this.productos}}
                    <li class="list-group-item">
                        <img src="{{this.url}}" alt="{{this.nombre}}" style="width: 50px; height: 50px;">
                        {{this.nombre}} - Cantidad: {{this.cantidad}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        {{/each}}
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
